<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow condong ke bawah -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="4dp"
        android:bottom="12dp">   <!-- makin besar makin turun shadow -->
        <shape android:shape="rectangle">
            <solid android:color="#BE000000"/> <!-- Shadow 20% hitam -->
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Button Asli -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_inputan"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

</layer-list>
