<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/title_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INPUTAN ANALISA"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/subtitle_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Untuk kebutuhan analisa anda bisa masukkan apa yang ada di bawah ini"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp"/>

        <!-- Image Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/image_analisa"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_hp1"/>
        </androidx.cardview.widget.CardView>

        <!-- Section Title -->
        <TextView
            android:id="@+id/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JAM BELAJAR PER MINGGU"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <!-- Section Description -->
        <TextView
            android:id="@+id/section_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam belajar per minggu mencerminkan seberapa konsisten kamu dalam mengatur waktu untuk belajar dan berkembang. Dari sini, sistem bisa menilai seberapa besar usaha dan kedisiplinan yang kamu miliki dalam mencapai performa akademik terbaik."
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Placeholder"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_selanjutnya"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SELANJUTNYA"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="@color/accent"
            app:cornerRadius="28dp"/>

    </LinearLayout>
</ScrollView>
