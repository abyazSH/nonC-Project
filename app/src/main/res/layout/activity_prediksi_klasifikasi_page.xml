<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Image dengan Overlay -->
    <RelativeLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_hp1"/>

        <!-- Overlay Gelap -->
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#80000000"/>

        <!-- Text Overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="16dp">

            <TextView
                android:id="@+id/title_prediksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PREDIKSI TINGKAT KESUKSESAN MAHASISWA"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/subtitle_prediksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='"Pantau tingkat sukses belajarmu"'
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:textStyle="italic"/>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_section"
        android:layout_above="@id/bottom_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Ayo Analisis -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_analisis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/logo"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ayo Analisis!!!"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inputkan performa anda disini"
                            android:textSize="12sp"
                            android:textColor="#888888"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tentang Prediksi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang Prediksi ini"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitur ini menggunakan teknologi Machine Learning untuk memperkirakan tingkat kesuksesan akademik mahasiswa berdasarkan faktor-faktor seperti jam belajar, kehadiran, jam tidur, motivasi, dan jenis sekolah asal. Hasil prediksi akan menampilkan nilai estimasi ujian beserta kategoriya, seperti Baik atau Cukup, disertai saran perbaikan yang dapat membantu meningkatkan performa akademik."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Section -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/accent"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/username_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="[USERNAME]"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            app:tint="@color/white"/>
    </LinearLayout>

</RelativeLayout>
